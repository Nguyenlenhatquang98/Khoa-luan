                <div style="background-color: black; width: 50px; height: 50px;clip-path: polygon(35% 0%,65% 0%,65% 35%,100% 35%,100% 60%,65% 60%,65% 100%,35% 100%,35% 60%,0% 60%,0% 35%,35% 35%); ">
                </div>
            </div>
        </div>*@
