<style>

    .vocabulary a {
        background-color: rgba(0, 0, 0,0.2);
    }

    body {
        background-image: url(https://kidsgoflash.com/wp-content/uploads/2017/02/kidsgoflash_sky_birds2.jpg);
        background-color: rgba(255,255,255,0.7);
        background-blend-mode: screen;
        background-position: center top;
        background-size: cover;
        background-repeat: no-repeat;
    }

    .match-container button {
        height: 80px;
        margin-bottom: 5px;
        border: none;
        border-radius: .5rem;
        font-weight: 500;
        font-size: 1.5rem;
        outline: none;
        background-color: rgba(255,255,255,0.7);
        border: 1px solid lightgrey;
        text-transform: capitalize;
    }

        .match-container button:hover {
            background-color: white;
        }

    .modal-confirm {
        color: #636363;
        width: 325px;
        font-size: 14px;
    }

        .modal-confirm .modal-content {
            padding: 20px;
            border-radius: 5px;
            border: none;
        }

        .modal-confirm .modal-header {
            border-bottom: none;
            position: relative;
        }

        .modal-confirm h4 {
            text-align: center;
            font-size: 26px;
            margin: 30px 0 -15px;
        }

        .modal-confirm .form-control, .modal-confirm .btn {
            min-height: 40px;
            border-radius: 3px;
        }

        .modal-confirm .close {
            position: absolute;
            top: -5px;
            right: -5px;
        }

        .modal-confirm .modal-footer {
            border: none;
            text-align: center;
            border-radius: 5px;
            font-size: 13px;
        }

        .modal-confirm .icon-box {
            color: #fff;
            position: absolute;
            margin: 0 auto;
            left: 0;
            right: 0;
            top: -70px;
            width: 95px;
            height: 95px;
            border-radius: 50%;
            z-index: 9;
            background: #82ce34;
            padding: 15px;
            text-align: center;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1);
        }

            .modal-confirm .icon-box i {
                font-size: 58px;
                position: relative;
                top: 3px;
            }

        .modal-confirm.modal-dialog {
            margin-top: 80px;
        }

        .modal-confirm .btn {
            color: #fff;
            border-radius: 4px;
            background: #82ce34;
            text-decoration: none;
            transition: all 0.4s;
            line-height: normal;
            border: none;
        }

            .modal-confirm .btn:hover, .modal-confirm .btn:focus {
                background: #6fb32b;
                outline: none;
            }

    .trigger-btn {
        display: inline-block;
        margin: 100px auto;
    }

    .modal-backdrop {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1030;
        background-color: #333333;
        opacity: 0.1;
    }
    .btn-edit:hover{
        box-shadow:0 0 6px grey;
        background-color:rgb(255,255,255);
    }
</style>
@{
    ViewBag.Title = "match";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Tuple<List<TUVUNGONTAP>, List<TUVUNGONTAP>> tuple = ViewData["tuple"] as Tuple<List<TUVUNGONTAP>, List<TUVUNGONTAP>>;
}

<div class="container-all" style="height:670px;padding:10px; display:flex;flex-direction:row;position:absolute;width:83%;top:60px;padding:20px;">

    <div class="match-container" style=" padding: 80px 100px;border-radius:.5rem;background-color:rgba(251, 248, 226,0.7);width:65%; height:100%;display:flex;flex-direction:row;justify-content:space-between;background-image:url(/Img/greenboard.png);background-repeat:no-repeat;background-size:95% 95%;background-position:center;">

            @if (tuple.Item1.Count > 0 && tuple.Item2.Count > 0)
            {
                <div class="name-container" style="display:flex;flex-direction:column;width:30%;height:100%;justify-content:flex-start;">
                    @foreach (var std in tuple.Item1)
                    {
                        <button class="button-match button-match1" id="@std.IDTV" name="@std.IDTV" style="background-color:rgba(255,255,255,0);border:1px solid rgba(255,255,255,0.7);color:rgba(255,255,255,0.7)">@std.TENTV</button>
                    }
                </div>
                <div class="meaning-container" style="display:flex;flex-direction:column;width:30%;height:100%;justify-content:flex-start;">
                    @foreach (var std in tuple.Item2)
                    {
                        <button class="button-match button-match2" id="@std.IDTV" name="@std.IDTV" style="background-color:rgba(255,255,255,0);border:1px solid rgba(255,255,255,0.7);color:rgba(255,255,255,0.7)">@std.NGHIATV</button>
                    }
                </div>
            }
 
    </div>
    <div class="match-result" style="border-radius: .5rem; background-color: rgba(251, 248, 226,0.7); width: 38%; margin-left: 15px;">
        <div class="card-container" style="height:100%;">
            <div class="card-info front-info" style="height:100%;width:100%;">
                <div class="flashcard-item" style="border:1px solid gray; margin: 20px 20px 0 20px; height:480px;display:flex;flex-direction:column;
        flex-direction:column;align-items:center;justify-content:flex-start;border-radius:2rem;background-color:rgba(255,255,255,0.7);">
                    <h1 style="text-transform:uppercase; font-size:2rem;margin-top:100px;">Kết quả luyện tập</h1>
                    <h3 id="tld" style="text-transform:uppercase; font-size:1.25rem;margin-top:25px;color:green;">Số câu trả lời đúng là : 0 </h3>
                    <h3 id="tls" style="text-transform:uppercase; font-size:1.25rem;margin-top:10px;color:red;">Số câu trả lời sai là : 0</h3>

                </div>


            </div>
            <div class="card-info back-info" style=" border:1px solid gray;  margin: 20px 20px 0 20px; height:480px;background-color:rgba(255,255,255,0.7);width:89%;
    display: flex;display:flex;flex-direction:column;
        flex-direction:column;align-items:flex-start;border-radius:2rem;transform:rotateY(-180deg); padding:30px 30px;overflow:auto;">
                <h2 style="font-size:1.5rem;">Các từ không chính xác :</h2>
                <ul id="wrong-contain">
                </ul>
                <h2 style="font-size:1.5rem;">Các từ chính xác :</h2>
                <ul id="right-contain">
                </ul>
            </div>
            <div class="edit-delete1" style="padding:5px 20px;position:absolute;bottom:-10px;height:125px;left:0;width:100%;margin:15px 0 ;">
                <div style="display:flex;flex-direction:row;justify-content:space-between; width:100%; height:45%; ">
                    <Button class="btn-edit" style="width:100%; height:100%;border-radius:2rem;border:1px solid grey;background-color:rgba(255,255,255,0.5);">CHI TIẾT</Button>
                    <a style="width:100%;" href="/Vocabulary/match?id=@tuple.Item1[0].IDCD"><Button class="btn-edit" style="border: 1px solid grey; width: 100%; height: 100%; border-radius: 2rem;background-color:rgba(255,255,255,0.5); ">LUYỆN TẬP LẠI</Button></a>
                </div>
                <div style="width:100%; height:45%;margin-top:10px;">
                    <a href="/Vocabulary/practice?id=@tuple.Item1[0].IDCD"><Button class="btn-edit" style="width:100%; height:100%;border-radius:2rem;border: 1px solid grey;background-color:rgba(255,255,255,0.5);">KẾT THÚC</Button></a>
                </div>

            </div>


        </div>
    </div>
</div>




<div id="myModal1" class="modal">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i class="material-icons">&#xE876;</i>
                </div>
                <h4 class="modal-title w-100">Tuyệt vời !</h4>
            </div>
            <div class="modal-body">
                <p class="text-center">Bạn vừa hoàn thành bài luyện tập.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btn-block" data-dismiss="modal">Đồng ý</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        dem = 0;
        var lanchan = 0;
        var lanle = 0;
        var count = 0;
        var tld = 0;
        var tls = 0;
        var soluong = @tuple.Item1.Count();
        var finish = 0;
        var tudoc;

    

        $(`.button-match`).click(function () {
            dem++;
            if (dem % 2 == 0) {
                if ($(this).attr("class") == 'button-match button-match2') {
                    lanchan = $(this).attr("id");
                    $(`#` + lanle).css("box-shadow", "none");
                    
                }
                else {
                    dem = 0;
                }
            }
            else {
                if ($(this).attr("class") == 'button-match button-match1') {
                    lanle = $(this).attr("id");
                    $(this).css("box-shadow", "0 0 5px grey");
                    tudoc = $(this).text();
                }
                else {
                    dem = 0;
                }
            }

            if (dem % 2 == 0 && dem != 0) {

                if (lanchan == lanle) {
                    setTimeout(function () {
                        responsiveVoice.speak("CorRect", "UK English Female", { volume: 0.5, rate: 0.75 });
                    }, 250);
                   
                    setTimeout(function () {
                        responsiveVoice.speak(tudoc, "UK English Female", { volume: 0.5, rate: 0.75 });
                    }, 1250);
                    var listsame = document.getElementsByName(lanchan.toString());
                    for (var i = 0; i < listsame.length; i++) {

                        if (finish < soluong) {
                            document.getElementsByName(lanchan.toString())[i].style.display = "none";
                            finish += 0.5 ;
                        }
                        if (finish == soluong) {
                            setTimeout(function (event) {
                                $(`#myModal1`).modal('show');
                                responsiveVoice.speak("Congratulations", "UK English Female", { volume: 1, rate: 1 });
                            }, 1000);
                        }

                    }
                    count++;
                    var checktt = false;
                    var listWrong = document.getElementsByClassName("wrong-word");
                    for (var i = 0; i < listWrong.length; i++) {
                        if (document.getElementById(lanle).textContent == listWrong[i].textContent) {
                            checktt = true;
                        }
                    }
                    if (checktt == false) {
                        tld++;
                        var node = document.createElement("li");
                        var textnode = document.createTextNode(document.getElementById(lanle).textContent);
                        node.className = "right-word";

                        node.appendChild(textnode);
                        document.getElementById("right-contain").appendChild(node);
                    }
                    document.getElementById("tld").textContent = "SỐ CÂU TRẢ LỜI ĐÚNG LÀ : " + tld;
                }
                else {
                    responsiveVoice.speak("Incorrect", "UK English Female", { volume: 0.5, rate: 0.75 });
                    
                    if (document.getElementById("wrong-contain").childElementCount == 0) {
                        tls++;
                        var node = document.createElement("li");
                        var textnode = document.createTextNode(document.getElementById(lanle).textContent);
                        node.className = "wrong-word";
                        node.appendChild(textnode);
                        document.getElementById("wrong-contain").appendChild(node);
                    } else {
                        var checktt = false;
                        var listWrong = document.getElementsByClassName("wrong-word");
                        for (var i = 0; i < listWrong.length; i++) {
                            if (document.getElementById(lanle).textContent == listWrong[i].textContent) {
                                checktt = true;
                            }
                        }
                        if (checktt == false) {
                            tls++;
                            var node = document.createElement("li");
                            var textnode = document.createTextNode(document.getElementById(lanle).textContent);
                            node.className = "wrong-word";

                            node.appendChild(textnode);
                            document.getElementById("wrong-contain").appendChild(node);
                        }

                    }
                    document.getElementById("tls").textContent = "SỐ CÂU TRẢ LỜI SAI LÀ : " + tls;

                }


            }

        });

        var i = 0;
        $(`.btn-edit`).click(function () {

            i = i + 1;
            if (i % 2 != 0) {
                $(`.front-info`).css("transform", "rotateY(180deg)");
                $(`.back-info`).css("transform", "rotateY(0)");
            }
            else {
                $(`.front-info`).css("transform", "rotateY(0)");
                $(`.back-info`).css("transform", "rotateY(-180deg)");
            }
        });



    });
</script>
