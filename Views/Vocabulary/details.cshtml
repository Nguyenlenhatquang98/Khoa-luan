@model KhoaLuanTotNghiep.Models.THONGTINTAIKHOAN
@using KhoaLuanTotNghiep.Models
<link rel="preconnect" href="https://fonts.gstatic.com">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://code.responsivevoice.org/responsivevoice.js?key=G9wc7rFf"></script>
<link rel="stylesheet" type="text/css" href="~/Content/style.css" />
@using KhoaLuanTotNghiep.Models;
@{
    ViewBag.Title = "details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container1 .flashcard-item1:not(:nth-child(5n)) {
        margin-right: 30px;
    }
    .vocabulary a{
        background-color: rgb(230, 230, 230);
    }

    .navtv {
        position: relative;
    }

        .navtv::after {
            position: absolute;
            content: '';
            right: -80px;
            left: -100px;
            top: -40px;
            bottom: -40px;
            background-color: lightgreen;
            z-index: -1;
            clip-path: ellipse(74% 96% at 35% 6%);
        }

    body {
        background-image: url(https://kidsgoflash.com/wp-content/uploads/2017/02/kidsgoflash_sky_birds2.jpg);
        background-color:rgba(255,255,255,0.7);
        background-blend-mode:screen;
        background-position: center top;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        /*background-color: rgb(255, 240, 179);*/
    }
    #learnCard {
        background-color: rgb(204, 0, 0);
    }
    #learnCard:hover {
        text-decoration: none;
        background-color: rgb(255, 0, 0);
    }

    #practiceCard {
        background-color: rgb(0, 153, 51);
    }

        #practiceCard:hover {
            background-color: rgb(0, 230, 77);
            text-decoration:none;
        }
    
</style>
@{
    List<TUVUNGONTAP> listTV = ViewData["ListTV"] as List<TUVUNGONTAP>;
    int idCD1 = Convert.ToInt32(ViewData["IDCD"]);
}

<div class="container1" style="display:flex;flex-direction:row;position:absolute;margin-left:20px;width:80%;padding: 10px;height:90%;margin-top:20px;">

    @using (Html.BeginForm("SearchWord", "Vocabulary"))
    {
        <input id="idcd" name="idcd" style="opacity:0;width:0;" value="@idCD1" />
        <div style="width:1200px;height:600px;overflow:hidden;display:flex;flex-direction:row;flex-wrap:wrap;padding:0;padding:0;margin-left:5px;">

            <div class="container-fluid navtv" style=" margin-right: 280px; height: 40px; width: 100%; display: flex; align-items: center; justify-content: flex-end; position: fixed;top:80px;width:80%;">
                <h2 style="margin-right:400px;">Danh sách thẻ</h2>
                <input type="text" name="searchWord" placeholder="Word ..." style="border-radius:2rem; padding-left:20px;outline:none;width:22%;height:100%;border:none;background-color:rgb(234, 234, 225);margin-right:300px;" />
                <input type="submit" value="Search" style="position:absolute;right:15px;height:100%;border-radius:2rem;width:5%;display:flex;align-items:center;justify-content:center; background-color:rgb(30, 47, 47); color:white;margin-right:300px;" />
                @Html.ActionLink("Học thẻ", "learnCard", "Vocabulary", new { id = idCD1 }, new { @id = "learnCard", @style = "position:absolute;right:200px;padding:7px 20px;color:white;font-weight:600;border-radius:2rem;" })
                @Html.ActionLink("Luyện tập", "practice", "Vocabulary", new {id = idCD1}, new { @id = "practiceCard", @style = "position:absolute;right:80px;padding:7px 20px;color:white;font-weight:600;border-radius:2rem;" })
            </div>
            @if (listTV != null)
            {

                <div style="width:100%;height:530px;overflow:auto;display:flex;flex-direction:row;flex-wrap:wrap;margin-top:70px;padding:20px 0 0 40px;background-color:rgba(222, 236, 237,0.8);border-radius:2rem;">
                    @for (int i = 0; i < listTV.Count(); i++)
                    {
                        <div class="flashcard-item1" id="@listTV[i].IDTV" style="width:17%; height:220px; margin-bottom:30px;text-align:center;border-radius:2rem;  display:flex; justify-content:center;align-items:center;">
                            <div class="card front" style="width:100%;height:100%;border-radius:2rem;display:flex;justify-content:center;box-shadow:0 0 10px grey; ">
                                <div style="background-image:url('@listTV[i].ANHTUVUNG');background-size:80% 100%;height:80%;background-repeat:no-repeat;background-position:center;"></div>
                                <h1 style="font-family: 'Courgette', cursive; text-transform:capitalize;font-size:1.5rem;margin-top:5px;">@listTV[i].TENTV</h1>
                            </div>
                            <div class="card back" style="width:100%;height:100%;border-radius:2rem;background-color:rgb(247, 247, 247);display:flex;justify-content:center;box-shadow:0 0 10px grey; ">
                                <h3  style="font-size:1.5rem;text-transform:capitalize;">@listTV[i].NGHIATV</h3>
                                <h4 style="font-size:1.5rem;">@listTV[i].PHIENAM</h4>
                                <div class="sound-container" id="@listTV[i].TENTV">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-volume-up-fill" viewBox="0 0 16 16">
                                        <path d="M11.536 14.01A8.473 8.473 0 0 0 14.026 8a8.473 8.473 0 0 0-2.49-6.01l-.708.707A7.476 7.476 0 0 1 13.025 8c0 2.071-.84 3.946-2.197 5.303l.708.707z" />
                                        <path d="M10.121 12.596A6.48 6.48 0 0 0 12.025 8a6.48 6.48 0 0 0-1.904-4.596l-.707.707A5.483 5.483 0 0 1 11.025 8a5.483 5.483 0 0 1-1.61 3.89l.706.706z" />
                                        <path d="M8.707 11.182A4.486 4.486 0 0 0 10.025 8a4.486 4.486 0 0 0-1.318-3.182L8 5.525A3.489 3.489 0 0 1 9.025 8 3.49 3.49 0 0 1 8 10.475l.707.707zM6.717 3.55A.5.5 0 0 1 7 4v8a.5.5 0 0 1-.812.39L3.825 10.5H1.5A.5.5 0 0 1 1 10V6a.5.5 0 0 1 .5-.5h2.325l2.363-1.89a.5.5 0 0 1 .529-.06z" />
                                    </svg>
                                </div>
                            </div>
                        </div>
                    }
                    @*<div class="flashcard-item" style="width:17%; height:180px;margin-top:10px; margin-bottom:30px;text-align:center;border-radius:2rem; background-color:rgb(247, 247, 247); display:flex; justify-content:center;align-items:center;">
                    <div style="background:gray; width:70px;height:70px;clip-path: circle(50% at 50% 50%);display:flex; justify-content:center;align-items:center;" id="add-TV">
                        <div style="background-color: black; width: 30px; height: 30px;clip-path: polygon(35% 0%,65% 0%,65% 35%,100% 35%,100% 60%,65% 60%,65% 100%,35% 100%,35% 60%,0% 60%,0% 35%,35% 35%); ">
                        </div>
                    </div>
                </div>*@
                </div>

            }
        </div>

    }

    @*<div id="card-container" style="background-color:rgb(247, 247, 247); margin-left:50px;width:415px;height:712px;">

        @if (listTV.Count > 0)
        {
            @Html.Partial("~/Views/Vocabulary/FLashcard.cshtml", listTV[0])
        }

    </div>*@
</div>

<script>
    $(document).ready(function () {
        $(`input`).attr("autocomplete", "off");
        $(`.flashcard-item1`).click(function () {
            $.ajax({
                method: "GET",
                url: '/Vocabulary/Flashcard',
                data: { data1: $(this).attr("id") },
                success: function (kq) {
                    $(`#card-container`).html(kq);
                }
            });
        });
        
        $(`#add-TV`).click(function () {
            $.ajax({
                method: "GET",
                url: '/Vocabulary/FlashcardCreate',
                data: { data1: $(`#idcd`).attr("value") },
                success: function (kq) {
                    $(`#card-container`).html(kq);
                }

            })
        });

        $(`.sound-container`).click(function () {

            responsiveVoice.speak($(this).attr("id"), "UK English Female", { pitch: 1 });

        });

    });
</script>


