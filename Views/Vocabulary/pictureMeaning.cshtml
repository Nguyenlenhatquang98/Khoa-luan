<style>
    .vocabulary a {
        background-color: rgba(0, 0, 0,0.2);
    }
    .btn-answer {
        transition: all .5s;
    }

    body {
        background-image: url(https://kidsgoflash.com/wp-content/uploads/2017/02/kidsgoflash_sky_birds2.jpg);
        background-color: rgba(255,255,255,0.7);
        background-blend-mode: screen;
        background-position: center top;
        background-size: cover;
        background-repeat: no-repeat;
    }

    .word-char:not(:first-child) {
        margin-left: 10px;
    }

    .word-choose:not(:first-child) {
        margin-left: 10px;
    }

    .modal-confirm {
        color: #636363;
        width: 325px;
        font-size: 14px;
    }

        .modal-confirm .modal-content {
            padding: 20px;
            border-radius: 5px;
            border: none;
        }

        .modal-confirm .modal-header {
            border-bottom: none;
            position: relative;
        }

        .modal-confirm h4 {
            text-align: center;
            font-size: 26px;
            margin: 30px 0 -15px;
        }

        .modal-confirm .form-control, .modal-confirm .btn {
            min-height: 40px;
            border-radius: 3px;
        }

        .modal-confirm .close {
            position: absolute;
            top: -5px;
            right: -5px;
        }

        .modal-confirm .modal-footer {
            border: none;
            text-align: center;
            border-radius: 5px;
            font-size: 13px;
        }

        .modal-confirm .icon-box {
            color: #fff;
            position: absolute;
            margin: 0 auto;
            left: 0;
            right: 0;
            top: -70px;
            width: 95px;
            height: 95px;
            border-radius: 50%;
            z-index: 9;
            background: #82ce34;
            padding: 15px;
            text-align: center;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1);
        }

            .modal-confirm .icon-box i {
                font-size: 58px;
                position: relative;
                top: 3px;
            }

        .modal-confirm.modal-dialog {
            margin-top: 80px;
        }

        .modal-confirm .btn {
            color: #fff;
            border-radius: 4px;
            background: #82ce34;
            text-decoration: none;
            transition: all 0.4s;
            line-height: normal;
            border: none;
        }

            .modal-confirm .btn:hover, .modal-confirm .btn:focus {
                background: #6fb32b;
                outline: none;
            }

    .trigger-btn {
        display: inline-block;
        margin: 100px auto;
    }

    .modal-backdrop {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1030;
        background-color: #333333;
        opacity: 0.1;
    }
</style>
<div class="container-all" style="height:670px;padding:10px; display:flex;flex-direction:row;position:absolute;width:83%;top:60px;">

    <div class="match-container" style="padding: 20px; border-radius: .5rem; background-color: rgba(251, 248, 226,0.7); width: 65%; height: 100%; display: flex; flex-direction: row; justify-content: space-between;">
        <section style="width:100%;height:100%;background-image:url(/Img/greenboard.png);background-size:100% 100%;border-radius:2rem;padding:48px 45px;">
            <div class="word-container" id="word-container" style="overflow:hidden;height:100%;">
                @for (var i = 0; i < listTV.Count(); i++)
                {
                    <div id="@i" class="word-section" style="width:100%;height:100%;padding-top:10px;">
                        <div class="picture-container" style="display:flex;flex-direction:column;height:50%;width:100%; display:flex;justify-content:center;align-items:center;margin-top:10px;">
                            <div class="picture" style="width:50%;height:90%;border-radius:2rem;background-color: rgba(255, 255, 255,1);background-image:url('@listTV[i].ANHTUVUNG');background-size:50% 100%;background-repeat:no-repeat;background-position:center;opacity:0.8">
                            </div>
                            <h5 style="margin-top:10px;text-transform:capitalize;color:white;">@listTV[i].NGHIATV</h5>
                        </div>
                        <div class="answer-container" style="height:50%;width:100%;padding:25px 40px 55px 40px;">
                            <div class="word-container-frame" id="@listTV[i].TENTV" style="width:100%;height:100%;display:flex;flex-direction:row;flex-wrap:wrap;">
                                @{
                                    List<TUVUNGONTAP> list2 = listTV.Where(t => t.TENTV != listTV[i].TENTV).ToList();
                                    var list3 = list2.OrderBy(t => randn.Next()).Take(3).ToList();
                                    list3.Add(listTV[i]);
                                    foreach (var item1 in list3.OrderBy(t => randn.Next()).ToList())
                                    {
                                        <div class="btn-answer-frame" id="@listTV[i].NGHIATV" style="width:50%;height:50%;padding:10px;">
                                            <button id="@item1.NGHIATV" class="btn-answer" style="width:100%;height:100%;border-radius:.5rem;background-color:rgba(255,255,255,0.7);outline:none">@item1.TENTV</button>
                                        </div>
                                    }

                                }
                            </div>
                        </div>
                    </div>
                }
                <div id="@listTV.Count()" class="word-section" style="width:100%;height:100%;padding-top:10px;">

                </div>
            </div>
        </section>

    </div>
    <div class="match-result" style="border-radius: .5rem; background-color: rgba(251, 248, 226,0.7); width: 38%; margin-left: 15px;">
        <div class="card-container" style="height:100%;">
            <div class="card-info front-info" style="height:100%;width:100%;">
                <div class="flashcard-item" style="border:1px solid gray; margin: 20px 20px 0 20px; height:480px;display:flex;flex-direction:column;
        flex-direction:column;align-items:center;justify-content:flex-start;border-radius:2rem;background-color:rgba(255,255,255,0.7);">
                    <h1 style="text-transform:uppercase; font-size:2rem;margin-top:100px;">Kết quả luyện tập</h1>
                    <h3 id="tld" style="text-transform:uppercase; font-size:1.25rem;margin-top:25px;color:green;">Số câu trả lời đúng là : 0 </h3>
                    <h3 id="tls" style="text-transform:uppercase; font-size:1.25rem;margin-top:10px;color:red;">Số câu trả lời sai là : 0</h3>

                </div>


            </div>
            <div class="card-info back-info" style=" border:1px solid gray;  margin: 20px 20px 0 20px; height:480px;background-color:whitesmoke;width:91%;
    display: flex;display:flex;flex-direction:column;
        flex-direction:column;align-items:flex-start;border-radius:2rem;transform:rotateY(-180deg); padding:30px 30px;overflow:auto;">
                <h2 style="font-size:1.5rem;">Các từ không chính xác :</h2>
                <ul id="wrong-contain">
                </ul>
                <h2 style="font-size:1.5rem;">Các từ chính xác :</h2>
                <ul id="right-contain">
                </ul>
            </div>
            <div class="edit-delete1" style="padding:5px 20px;position:absolute;bottom:-10px;height:125px;left:0;width:100%;margin:15px 0 ;">
                <div style="display:flex;flex-direction:row;justify-content:space-between; width:100%; height:45%; ">
                    <Button class="btn-edit" style="width:100%; height:100%;border-radius:2rem;border:1px solid grey;background-color:rgba(255,255,255,0.5);">CHI TIẾT</Button>
                    <a style="width:100%;" href="/Vocabulary/pictureMeaning?id=@tuple.Item2"><Button class="btn-edit" style="border: 1px solid grey; width: 100%; height: 100%; border-radius: 2rem;background-color:rgba(255,255,255,0.5); ">LUYỆN TẬP LẠI</Button></a>
                </div>
                <div style="width:100%; height:45%;margin-top:10px;">
                    <a href="/Vocabulary/practice?id=@tuple.Item2"><Button class="btn-edit" style="width:100%; height:100%;border-radius:2rem;border: 1px solid grey;background-color:rgba(255,255,255,0.5);">KẾT THÚC</Button></a>
                </div>

            </div>


        </div>
    </div>
</div>


<div id="myModal1" class="modal">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i class="material-icons">&#xE876;</i>
                </div>
                <h4 class="modal-title w-100">Tuyệt vời !</h4>
            </div>
            <div class="modal-body">
                <p class="text-center">Bạn vừa hoàn thành bài luyện tập.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btn-block" data-dismiss="modal">Đồng ý</button>
            </div>
        </div>
    </div>
</div>
<script>


    $(document).ready(function () {
        var i = 0;
        var temp = 0;
        var tld = 0;
        var tls = 0;
        var checktt = false;

        $(`.btn-edit`).click(function () {

            i = i + 1;
            if (i % 2 != 0) {
                $(`.front-info`).css("transform", "rotateY(180deg)");
                $(`.back-info`).css("transform", "rotateY(0)");
            }
            else {
                $(`.front-info`).css("transform", "rotateY(0)");
                $(`.back-info`).css("transform", "rotateY(-180deg)");
            }
        });

        $(`.btn-answer`).click(function () {
            console.log(checktt);
            if ($(this).attr("id") == $(this).parent().attr("id")) {
                var wordcorrect = $(this).parent().parent().attr("id");
                $(this).css("background-color", "rgb(78, 177, 78)");
                $(this).css("color", "white");
                setTimeout(function () {
                    responsiveVoice.speak("Correct", "UK English Female", { volume: 1, rate: 0.75 });
                }, 250);
                setTimeout(function () {
                    responsiveVoice.speak(wordcorrect, "UK English Female", { volume: 1, rate: 0.75 });

                }, 1000);
                if (checktt == false) {
                    tld++;
                    var node = document.createElement("li");
                    var textnode = document.createTextNode($(this).parent().parent().attr("id"));
                    node.className = "right-word";
                    node.appendChild(textnode);
                    document.getElementById("right-contain").appendChild(node);

                    document.getElementById("tld").textContent = "SỐ CÂU TRẢ LỜI ĐÚNG LÀ : " + tld;
                }

                setTimeout(function () {
                    temp++;
                    document.getElementById(temp).scrollIntoView();
                    checktt = false;
                    if (temp == @idtrangkt) {
                        $(`#myModal1`).modal('show');
                        responsiveVoice.speak("Congratulations", "UK English Female", { volume: 1, rate: 1 });
                }
                }, 2000);


            }
            else {
                $(this).css("background-color", "#dc3545");
                $(this).css("color", "white");
                if (checktt == false) {
                    tls++;
                    var node = document.createElement("li");
                    var textnode = document.createTextNode($(this).parent().parent().attr("id"));
                    node.className = "wrong-word";
                    node.appendChild(textnode);
                    document.getElementById("wrong-contain").appendChild(node);

                    document.getElementById("tls").textContent = "SỐ CÂU TRẢ LỜI SAI LÀ : " + tls;
                    checktt = true;
                }
                setTimeout(function () {
                    responsiveVoice.speak("InCorrect", "UK English Female", { volume: 1, rate: 0.75 });

                }, 250);
            }
        });


    });
</script>


