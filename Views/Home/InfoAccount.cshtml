@model KhoaLuanTotNghiep.Models.THONGTINTAIKHOAN
<link rel="preconnect" href="https://fonts.gstatic.com">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/style.css" />
<style>
    li:first-child {
        margin-top: 10px;
    }

    li:not(:first-child) {
        margin-top: 18.5px;
    }
</style>


<div style="width:100%;height:50%;margin-bottom:30px;box-shadow:0 0 5px grey;background-size:100% 100%;">
    @if (Model.ANHACC != null)
    {
        <img src="@Url.Content(Model.ANHACC)" alt="Alternate Text" style="width:100%; height:100%; border-radius:2rem;" />
    }
    else
    {
        <img src="~/Img/avatar.jpg.png" alt="Alternate Text" style="width:100%; height:100%; border-radius:2rem;" />
    }

</div>


<div style="width:100%;display:flex;flex-direction:row;">
    <ul style="margin-left:-30px;font-size:1rem;list-style:none;width:40%;height:100%;display:flex;flex-direction:column;justify-content:flex-start;align-items:flex-end;">
        <li>Họ và tên :</li>
        <li>Sinh nhật :</li>
        <li>Giới tính :</li>
        <li>Email :</li>
        <li>Địa chỉ :</li>
        <li>Số điện thoại :</li>
    </ul>
    <ul class="AccountInfo" style="margin-left: -25px; font-size: 1rem; list-style: none; width: 60%; height: 100%; display: flex; flex-direction: column; justify-content: flex-start; align-items: flex-start;">
        <li class="name">@Model.TEN</li>
        @{
            int day = Model.NGAYSINH.Value.Day;
            int month = Model.NGAYSINH.Value.Month;
            int year1 = Model.NGAYSINH.Value.Year;
        }
        <li class="birthday1">@day/@month/@year1</li>
        @if (Model.GIOITINH == true)
        {
            <li class="gender">Nam</li>
        }
        else
        {
            <li class="gender">Nữ</li>
        }
        <li class="email">@Model.EMAIL</li>
        <li class="address">@Model.DIACHI</li>
        <li class="phonenumber">@Model.SODT</li>
    </ul>
</div>
