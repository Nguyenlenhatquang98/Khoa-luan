@model KhoaLuanTotNghiep.Models.THONGTINADMIN
@using KhoaLuanTotNghiep.Models;
@{
    ViewBag.Title = "FixExam";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    Model1 model = new Model1();
    Tuple<List<TUVUNGPHONGLUYENTAP>, int> tuple = ViewData["tuple"] as Tuple<List<TUVUNGPHONGLUYENTAP>, int>;
    PHONGLUYENTAP plt = model.PHONGLUYENTAPs.Where(t => t.IDPLT == tuple.Item2).SingleOrDefault();
}
<link rel="preconnect" href="https://fonts.gstatic.com">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/style.css" />
<style>
    body {
        background-image: url(https://kidsgoflash.com/wp-content/uploads/2017/02/kidsgoflash_sky_birds2.jpg);
        background-color: rgba(255,255,255,0.7);
        background-blend-mode: screen;
        background-position: center top;
        background-size: cover;
        background-repeat: no-repeat;
    }
    .practice .btn {
        background-color: rgb(230, 230, 230);
    }

    th:first-child {
        width: 20%;
    }

    th:not(:first-child) {
        width: 40%;
    }

    td:first-child {
        width: 20%;
    }

    td:not(:first-child) {
        width: 40%;
    }
</style>

<div style="margin-left:-20px;width:1306px;height:711px;padding:35px;display:flex;flex-direction:row;">
    <div style="height:100%;width:65%;background-color:rgba(222, 236, 237,0.8);padding:30px;">
        <div style="border-radius:.5rem; width:100%; height: 50px;display:flex;align-items:center;flex-direction:row;justify-content:space-around;background-color:rgba(255,255,255,0.5);">
            <h4>Số từ vựng : @tuple.Item1.Count()</h4>
            <div style="display:flex;flex-direction:row;">
                <h4>Thời gian (Phút) : </h4>
                <input type="number" id="time" name="time" min="1" max="1000" style="height:80%;width:90px;margin-top:3px;margin-left:10px;" value="@plt.THOIGIAN">
            </div>
            <button class="add-word" style="padding:5px 20px;border:none;border-radius:2rem;background-color:#00a3cc;color:white;outline:none;">Thêm từ</button>
        </div>
        <div style="margin-top:30px;height:500px;overflow:auto;background-color:rgba(255,255,255,0.5);">
            <table class="table" style="width:100%;">
                <tr style="background-color:rgb(31, 46, 46); color:rgb(230, 230, 230);">
                    <th>STT</th>
                    <th>Tên từ vựng</th>
                    <th>Nghĩa từ vựng</th>
                </tr>
                @for (int i = 0; i < tuple.Item1.Count(); i++)
                {
                    <tr>
                        <td id="@(i+1)">@(i+1)</td>
                        <td id="@tuple.Item1[i].TENTV">@tuple.Item1[i].TENTV</td>
                        <td id="@tuple.Item1[i].NGHIATV">@tuple.Item1[i].NGHIATV</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div style="height:100%;width:33%;margin-left:30px;background-color:rgba(222, 236, 237,0.8);padding:30px;">
        <div class="card-container">
            <div class="card-info front-info" style=" border:1px solid gray; padding:30px; width:100%;height:520px;background-color:rgba(255,255,255,0.3);display: flex;display:flex;flex-direction:column;flex-direction:column;align-items:center;border-radius:2rem;">
                <h3>1 / 10</h3><br />
                <h1>Thông tin thẻ</h1><br />
                <input type="text" name="name" value="Ocean" placeholder="Tên từ vựng ..." style="width:100%;height:50px;padding-left:20px;border-radius:.5rem;" /><br />
                <input type="text" name="meaning" value="Đại dương" placeholder="Nghĩa từ vựng ..." style="width:100%;height:50px;padding-left:20px;border-radius:.5rem;" /><br />
                <input type="file" name="file" style="margin-left:10px;"  /><br />
                <div style="width:100%;height:50px;display:flex;flex-direction:row;justify-content:space-between;">
                    <button class="btn-success" style="width:45%;height:100%;border-radius:.5rem;">Lưu</button>
                    <button class="btn-danger" style="width:45%;height:100%;border-radius:.5rem;">Xóa</button>
                </div>
            </div>
            @using (Html.BeginForm("EditVocab", "Vocabulary", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
        <div class="card-info back-info" style=" border:1px solid gray;padding:30px; width:100%;height:520px;background-color:rgba(255,255,255,0.3);display: flex;display:flex;flex-direction:column;flex-direction:column;align-items:center;border-radius:2rem;transform:rotateY(-180deg)">
            <br />
            <h1>Thông tin thẻ</h1><br />
            <input type="text" name="name" value="" placeholder="Tên từ vựng ..." style="width:100%;height:50px;padding-left:20px;border-radius:.5rem;" /><br />
            <input type="text" name="meaning" value="" placeholder="Nghĩa từ vựng ..." style="width:100%;height:50px;padding-left:20px;border-radius:.5rem;" /><br />
            <input type="file" name="file" style="margin-left:10px;" /><br />
            <div style="width:100%;height:50px;display:flex;flex-direction:row;justify-content:space-between;">
                <button class="btn-success" style="width:100%;height:100%;border-radius:.5rem;">Lưu</button>
            </div>
        </div>
            }
        </div>
        <button class="update-btn btn-success" style="margin-top:530px;width:100%;height:50px;border-radius:.5rem;outline:none;">Cập nhật bài luyện tập</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        var i = 0;
        $(`.add-word`).click(function () {
            i = i + 1;
            if (i % 2 != 0) {
                $(`.front-info`).css("transform", "rotateY(180deg)");
                $(`.back-info`).css("transform", "rotateY(0)");
            }
            else {
                $(`.front-info`).css("transform", "rotateY(0)");
                $(`.back-info`).css("transform", "rotateY(-180deg)");
            }
        });
    });
</script>