<div class="modal" id="SignInModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Đăng nhập</h4>

            </div>

            @using (Html.BeginForm("SignIn", "Home"))
            {
                <!-- Modal body -->
                <div class="modal-body">
                    <input type="text" name="username" class="w-100 namesignin" placeholder="Tên đăng nhập ..." required><br>

                    <input type="password" name="password" class="mt-2 w-100 passsignin" placeholder="Mật khẩu ..." required><br>

                    <input type="submit" value="Đăng nhập" class=" mt-3 btn btn-primary w-100">
                </div>
            }
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-success w-50 create-btn" data-dismiss="modal">Tạo tài khoản mới</button>

            </div>

        </div>
    </div>
</div>
<div class="modal" id="SignUpModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Đăng ký tài khoản</h4>
            </div>

            @using (Html.BeginForm("SignUp", "Home"))
            {
                <!-- Modal body -->
                <div class="modal-body">
                    <input type="text" name="name" class="mt-2 w-100 mb-2" placeholder="Họ và tên ..." required><br>
                    <input type="text" name="username" class="w-100" placeholder="Username ..." required><br>
                    <input type="text" name="password" class="mt-2 w-100" placeholder="Password ..." required><br>
                    <label class="mt-2">Ngày sinh:</label>
                    <div class="birthday">
                        <select name="day" id="day" required>
                            <option value="0">Ngày</option>
                            @for (int i = 1; i < 32; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <select name="month" id="month" required>
                            <option value="0">Tháng</option>
                            @for (int i = 1; i < 13; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <select name="year" id="year" required>
                            <option value="0">Năm</option>
                            @for (int i = DateTime.Now.Year - 100; i < DateTime.Now.Year + 100; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <label class="mt-2">Giới tính:</label>
                    <div class="Gender">
                        <div class="male">
                            <label for="male">Nam</label>
                            <input type="radio" id="male" name="gender" value="1" checked>
                        </div>
                        <div class="female">
                            <label for="female">Nữ</label>
                            <input type="radio" id="female" name="gender" value="2">
                        </div>
                    </div>
                    <input type="submit" value="Đăng ký" class=" mt-3 btn btn-success w-100">

                </div>
            }

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(`.create-btn`).click(function (event) {
            event.preventDefault();
            jQuery.noConflict();
            $(`#SignUpModal`).modal('show');
        });
        $(`input`).attr("autocomplete", "off");
    });
</script>